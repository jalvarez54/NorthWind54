@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Oh Snap!";
}

<h1 class="text-danger">Oh Snap! an UnHandled Exception.</h1>
<h2 class="text-danger">
    Sorry, an error occurred while processing your request. We've been notified and we will check it out.
    If you know what you were doing, or if you're evil, let us know on our <a href="http://northwind54.codeplex.com/" target="_blank"> CodePlex discussion site.</a>
</h2>
    @{
    try
    {
        if (HttpContext.Current.IsDebuggingEnabled && @Model != null)
        {
            <p>
                Action Name: @Model.ActionName <br />
                Controller Name: @Model.ControllerName <br />
                Exception.Message: @Model.Exception.Message <br />
                Exception.Source: @Model.Exception.Source <br />
                Exception.TargetSite: @Model.Exception.TargetSite <br />
                Exception.InnerException: @Model.Exception.InnerException <br />
                Exception.StackTrace: @Model.Exception.StackTrace
            </p>
        }
    }
    catch (Exception)
    {
        // Do nothing
    }
    }
<a href="#" onclick="history.go(-1)">Go Back</a>
